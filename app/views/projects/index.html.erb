<%= content_for :title do %>
  Projects | IndieReel
<% end%>

<% if current_user.uid == @user.uid %>
    <h1>These are the projects you've worked on as a(n) <%= @role.role_type %>, <%= current_user.first_name %>!</h1>
	<%= link_to "Back to your #{@role.role_type} page", role_route(@role) %>
<% else %>
    <h1>These are the projects <%= @user.name %> has worked on as a(n) <%= @role.role_type %>!</h1>
	<%= link_to "Back to #{@user.name}'s #{@role.role_type} page", role_route(@role) %>
<% end %>
<%= link_to "Logout", logout_path %>
