<div class="container">
  <% if current_user.uid == @user.uid %>
    <hr />
    <h2>Welcome to IndieReel, <%= current_user.first_name %>!</h3>
    <hr />
    <% if !@roles.empty? %>
      <div class="row-fluid">
        <div class="span6">
          <h3>Your Roles</h3>
        </div>
        <div class="span6">
        	<div class="pull-right">
            <% if @roles.length == Role.options.length %>
          	  	<span class="label">You've added all the available roles.</span>
			<% else %>
				<%= link_to content_tag(:strong, "+ Add a Role"), new_role_path, :id => :add_role, :class => "btn btn-info btn-small" %>
        	<% end %>
          </div>      	
        </div>
      </div>
    
    	<hr />
      <% for group in @grouped_roles %>
	      <div class="row-fluid">
		      <% for role in group %>
		        <div class="span6" id="<%= role.role_type %>">
		          <div class="row-fluid">
		          
		            <div class="span12">
			            <div class="well">
				            <h3><%= role.role_type.capitalize %><small> as <%= role.role_name %></small></h3>
				            <hr style="margin:5px 0px 10px 0px"/>
				            <div class="row-fluid">
				              <div class="span5">
				              <%= image_tag role.profile_pic_url, :width => 100, :height => 100, :class => "pull-left" %>
				              </div>
				              <div class="span7">
			                  <ul class="nav">
				                  <li><%= link_to "View Profile", role_route(role) %></li>
				                  <li><%= link_to "Edit Profile", edit_role_route(role) %></li>
				                  <li><%= link_to "Portfolio", portfolio_route(role) %></li>
				                  <li><%= link_to "Projects", projects_route(role)%></li>
			                  </ul>
				              </div>
				            </div>
				            <hr style="margin:10px 0px 10px 0px" />
						<%= form_tag user_path(current_user), :style => "display:inline-block", :class => "pull-left" do %>
							<%= hidden_field_tag "role_id", role.id %>
							<%= (role.default_role_user.nil?) ? submit_tag("Set Default Role", :class => "btn btn-mini") : content_tag(:span, "Currently the default role", :class => "ir-default-role-indicator")%>
						<% end %>
		                <%= button_to "Delete", role_path(role), :method => :delete, :confirm => "Are you sure you want to delete your #{role.role_type.capitalize} role?", :class => "btn btn-mini btn-danger pull-right", :form => {:style => "display:inline-block"}%>
        					</div>
      					</div>
		          </div>
		        </div>
		      <% end %>
	      </div>
	    <% end %>

    <% else %>
      <p>You have no roles. <%= link_to "Create one?", new_role_path, :class => "btn btn-info btn-small" %></p>
      <br>
      <div class="well">
        <h4>What are roles? </h4>    
        <p>A role is the position that you would take in a film production. You can choose between 4 main roles, and elaborate on details in your role profile. For more information, visit the <%= link_to "help page", help_path %>. </p>
      </div>
    <% end %>
  <% else %>
    <!-- redirect_to role_routes(@default_role) -->
	  <!-- link to default profile here, or if there's a parameter to a specific profile, do that instead -->
  <% end %>
</div>
