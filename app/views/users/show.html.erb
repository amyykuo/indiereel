<% if current_user.uid == @user.uid %>
    <h1>Welcome to IndieReel, <%= current_user.first_name %>!</h1>
    <h2>Roles</h2>    
    <% if !@roles.empty? %>
        <ul>
            <% for role in @roles do %>
                <li class="role">
                  <%= link_to "#{role.role_type}", role_route(role) %>
                  <%= link_to "#{role.role_name}", role_route(role) %>
                  <%= link_to image_tag("#{role.profile_pic}"), role_route(role) %> <!-- enlarge instead of redirecting -->
                  <%= link_to "Edit", role_route(role, "edit") %>
                  <%= link_to "Projects", projects_route(role) %>
                  <%= link_to "Portfolio", portfolio_route(role) %>
                </li>
            <% end %>
            <li><%= link_to "Add a role", new_role_path %></li>
        </ul>
    <% else %>
        <p>You have no roles. <%= link_to "Create one?", new_role_path %></p>
    <% end %>
<% else %>
    <h1>You're on <%= @user.name %>'s Profile!</h1>
<% end %>
