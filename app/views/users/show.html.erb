<% if current_user.uid == @user.uid %>
    <h1>Welcome to IndieReel, <%= current_user.first_name %>!</h1>
    <% if @roles.empty? %>
        <p>You have no roles.</p>
    <% else %>
        <% for role in @roles do %>
            <%= link_to "Your profile as a(n) #{role.type}", :controller => "roles", :role => role.type, :identifier => current_user.identifier %>
        <% end %>
    <% end %>
<% else %>
    <h1>You're on <%= @user.name %>'s Profile!</h1>
<% end %>
<%= link_to "Logout", logout_path %>