<% if current_user.uid == @user.uid %>
    <h1>Welcome to IndieReel, <%= current_user.first_name %>!</h1>
    <%= link_to "Your portfolio as an actor", :controller => "portfolios", :role => "actor", :identifier => current_user.uid, :action => "edit" %>
<% else %>
    <h1>You're on <%= @user.name %>'s Profile!</h1>
<% end %>
<%= link_to "Logout", logout_path %>