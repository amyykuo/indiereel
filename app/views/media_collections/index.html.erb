<% if current_user.uid == @user.uid %>
  <hr />
  <h3><%= @role.role_type.capitalize %> Portfolio
  <small class="pull-right">
    <%= link_to "Add Collection?", new_media_collection_path(:role => @role.role_type), :class => "btn" %>
    <%= link_to "Back to #{@role.role_type.capitalize}", role_route(@role) %>
  </small></h3>
  <hr />
  
  <h4>QuickShow</h4>
  <hr />
  <% if true %>
    Would you like to set a quickshow?
  <% end %>
  <br />
  <br />
  <h4>Albums</h4>
  <hr />
	

	
	 <% if !@role.media_collections.empty? %> 
	    <% for album in @role.media_collections %> 
          <div class="span3">
            <div class="row-fluid">
              <div class="span12">
                <div class="well">
                  <div class="row-fluid">
                    <div class="span12" align="center">
                      <div class="nav">
              
                        <h3><%= link_to album.title, mc_route(album) %></h3>
              
                      </div>
                    </div>
                  </div>
            
                  <hr style="margin:10px 0px 10px 0px" />
            
                  <div class="btn-group" >
                    <%= link_to "Edit", "#", :class => "btn btn-small" %>
                    <%= link_to "Delete", "#", :class => "btn btn-small" %>
				          </div> 
                </div>
              </div>
            </div>
          </div>
    
	      
	    <% end %>
	 <% end %> 

<% else %>
    <h1>You're on <%= @user.name %>'s <%= @role.role_type %> portfolio!</h1>
	<%= link_to "Back to #{@user.name}'s #{@role.role_type} page", role_route(@role) %>
<% end %>

