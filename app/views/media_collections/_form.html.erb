<%= form_for @mc do |f| %>
	<%= f.label :title %>
	<% title_options = {:placeholder => "The name of your album"} %>
	<% title_options.merge! :disabled => "disabled" if (@mc.headshot or @mc.quickshow)%>
	<%= f.text_field :title, title_options %>
	
	<%= f.label :description %>
	<%= f.text_area :description, :placeholder => "Sum up your album in a few words", :rows => 5 %>
	
	<%= f.hidden_field :role_id %>
	
	<div class="actions">
    	<%= f.submit (@mc.new_record? ? "Create Album" : "Update Album"), :class => "btn btn-primary" %>
		<%= link_to "Cancel", (@mc.new_record? ? portfolio_route(@mc.role) : mc_route(@mc)), :class => "btn" %>
  	</div>
<% end %>
