<%= form_tag media_collection_path(@album), :method => 'put' do %>
	<%= label_tag "mc[title]", "Title:" %>
	<%= text_field_tag "mc[title]", @album.title, {:placeholder => "Enter the title of your Album"} %>

	<%= label_tag "mc[description]", "Description:" %>
	<%= text_area_tag "mc[description]", @album.description, {:placeholder => "Describe this Album"} %>
	
	<%= hidden_field_tag "mc[role_id]", @role.id %>
	
	<p>

    Please specify a file, or a set of files to upload to this album:<br>
    <input type="file" name="datafile" size="40">

  </p>
  
	<input type="submit" value="Update Album"> <%= link_to "Cancel", mc_route(@album) %>
<% end %>
