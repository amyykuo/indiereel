<%= form_tag media_collection_path(@album) do %>
	<%= label_tag "mc[title]", "Tile:" %>
	<%= text_field_tag "mc[title]", @album.title, {:placeholder => "Enter the title of your Album"} %>

	<%= label_tag "mc[description]", "Description:" %>
	<%= text_field_tag "mc[description]", @album.description, {:placeholder => "Describe this Album"} %>
	
	<%= hidden_field_tag "mc[role_id]", @role.id %>
	
	<br><br><input type="submit" value="Update Role"> <%= link_to "Cancel", media_collection_path(@mc) %>
<% end %>
