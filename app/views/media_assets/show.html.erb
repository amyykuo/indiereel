<hr />
  <h3>
    <%= "#{@media_asset.media_collection.title}:" %>
    <%= "#{@media_asset.description}" %>
    <span class="pull-right">
        <%= link_to "Delete", media_asset_path(@media_asset), :method => :delete, :confirm => "Are you sure you want to delete this file?", :class => "btn btn-mini btn-danger" %>
    </span>
  </h3>  
<hr />

<br>

<div class="row-fluid">
    <div class="well" style="text-align:center">
        <% if @media_asset.image? %>
            <%= link_to image_tag(@media_asset.media.url(:preview)), @media_asset.media.url %>
        <% elsif @media_asset.video? %>
            <%= content_tag(:iframe, nil, :width => 900, :height => 500, :src => "http://www.youtube.com/embed/#{@media_asset.youtube_id}", :frameborder => 0, :allowfullscreen => true) %>
        <% end %>
    </div>
</div>


