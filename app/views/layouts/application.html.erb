<!DOCTYPE html>
<html>
<head>
  <title>Indiereel</title>
  <%= stylesheet_link_tag    "application" %>
  <style>body { padding-top: 70px}</style>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <script type="text/javascript">if (window.location.hash == '#_=_')window.location.hash = '';</script>
</head>
<body>
	
	<div class="navbar navbar-fixed-top">
	    <div class="navbar-inner">
	      <div class="container">
				<%= link_to "IndieReel", home_route(current_user), :class => "brand"%>
				<ul class="nav">
					<li class="divider-vertical"></li>
				  <li class="active dropdown">
				  		<a href="#" class="dropdown-toggle" data-toggle="dropdown">
							<b class="caret"></b>&nbsp;
							<strong><%= (@role.nil? ? "Select a role" : @role.role_type).capitalize %></strong>
						</a>
						<ul class="dropdown-menu">
							<li><%= link_to "All Roles", home_route(current_user) %></li>
							<li class="divider"></li>
							<% for role in current_user.roles %>
								<li><%= link_to role.role_type.capitalize, role_route(role) %></li>
							<% end %>
							<li class="divider"></li>
							<li><%= link_to "Add a new role", new_role_path %></li>
						</ul>
				  </li>
				<% unless @role.nil? %>
				  <li><a>:</a></li>
				  <li><%= link_to "Edit", role_route(@role, "edit") %></li>
				  <li><%= link_to "Portfolio", portfolio_route(@role) %></li>
				  <li><%= link_to "Projects", projects_route(@role) %></li>
				<% end %>
				<li class="divider-vertical"></li>
				<li><a href="#">Search for People</a></li>
				</ul>
				<ul class="nav pull-right">
					<li><img src="<%= current_user.image %>" height="28" width="28" style="margin-top: 6px"></li>
					<li><%= link_to "Logout", logout_path %></li>
				</ul>
	      </div>
	    </div>
	</div>
<div class="container">
<%= yield %>
</div>

</body>
</html>
