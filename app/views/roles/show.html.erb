<% if current_user.uid == @user.uid %>
	<div class="alert alert-info">
	    <h4>You're on your <%= @role.role_type %> page <small class="pull-right"><%= link_to "Edit this role", role_route(@role, "edit") %></small></h4>
	</div>
	<hr />
	<div class="row">
		<div class="span3">
			<h3><%= @role.role_name %><small class="pull-right"><%= @role.role_type %></small></h3>
			<div class="well">
				<%= image_tag "default_role_pic.jpg", :width => 180, :height => 180 %>
				<hr />
				<%= button_to 'Delete this Role', role_path(@role), :method => :delete, :confirm => 'Are you sure you want to delete this role?', :class => "btn btn-mini btn-danger" %>
			</div>
		</div>
		<div class="span9">
			<section id="contact-info">
					<h3>Contact Information</h3>
					<hr />
			</section>
			<section id="description">
					<h3>Description</h3>
					<hr />
			</section>
			<section id="experience">
					<h3>Experience</h3>
					<hr />
			</section>
			<section id="skills">
					<h3>Skills</h3>
					<hr />
			</section>
			<section id="portfolio">
					<h3>Portfolio<small class="pull-right"><%= link_to "View full portfolio", portfolio_route(@role) %></small></h3>
					<hr />
			</section>
			<section id="projects">
					<h3>Projects<small class="pull-right"><%= link_to "View all projects", projects_route(@role) %></small></h3>
					<hr />
			</section>
		</div>
	</div>


    <h1>This is your <%= @role.role_type %> page, <%= current_user.first_name %>!</h1>
    <ul>
        <li><%= link_to "Edit your profile", role_route(@role, "edit") %></li>
        <li><%= link_to "Your portfolio as #{@role.role_type}", portfolio_route(@role) %></li>
        <li><%= link_to "Projects you've worked on as #{@role.role_type}", projects_route(@role) %></li>
		    <li><%= link_to "Back to home", home_route(current_user) %>
    </ul>
	<%= button_to 'Delete this Role', role_path(@role), :method => :delete, :confirm => 'Are you sure you want to delete this role?' %>
<% else %>
    <h1>You're on <%= @user.name %>'s <%= @role.role_type %> page!</h1>
    <ul>
    <li><%= link_to "#{@user.name}'s' portfolio as a(n) #{@role.role_type}", portfolio_route(@role) %></li>
    <li><%= link_to "Projects #{@user.name} has worked on as a(n) #{@role.role_type}", projects_route(@role) %></li>
    </ul>
<% end %>
<%= link_to "Logout", logout_path %>
