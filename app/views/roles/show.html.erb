<div class="container">
  <hr />  
  <div class="row-fluid">
    <div class="span3">
      <h1><%= @role.role_name %></h1>
    </div>
    <div class="span6">
      <h2><%= @role.role_type.capitalize %></h2>
      <dd><%= @role.role_type_description %></dd>
    </div>
    <div class="span3">
      <% if current_user.uid == @user.uid %>
        <small class="pull-right">
          <%= link_to "Edit", role_route(@role, 'edit') %> | 
          <%= link_to "Delete", role_path(@role), :method => :delete, :confirm => 'Are you sure you want to delete this role?' %> |
          <%= link_to "Preview", "#" %> 
        </small>
      <% elsif @user.roles.length > 1 %>
        <div class="btn-group">
          <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
            Other Roles
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <% for role in @user.roles %>
              <%= link_to "#{role.role_type.capitalize}", role_route(role) %>
            <% end %>
          </ul>
        </div>
      <% end %>  
    </div>
  </div>
  
  <hr />
  
  <div class="row-fluid">
    <div class="span3">
		  <div class="well">
			  <%= image_tag "default_role_pic.jpg", :width => 180, :height => 180 %>
		  </div>
	  </div>
	  
	  <div class="span9">
  	  <h3><em>Basic Info</em><small class="pull-right"><%= link_to "Edit", role_route(@role, "edit") %></small></h3>
  	  <hr />
	    <div class="row-fluid">
	      <div class="span6">
		      <section id="description">
	      	  <h3>Description</h3>
			      <ul class="unstyled">
				      <li><strong>Age Range: </strong> <%= @role.age_range %>
				      <li><strong>Eyes: </strong> <%= @role.eyes %></li>
				      <li><strong>Hair: </strong> <%= @role.hair %></li>
				      <li><strong>Height: </strong> <%= @role.height %></li>
				      <li><strong>Weight: </strong> <%= @role.weight %></li>
			      </ul>
		      </section>
		    </div>
		    <div class="span6">
		      <section id="contact-info">
		        <h3>Contact Information</h3>
		        <ul class="unstyled">
	        	  <li><strong>Email: </strong><%= @role.email %></li>
			        <li><strong>Phone: </strong><%= @role.phone_number %></li>
		        </ul>
		      </section>
		      <section id="agency-info">
		        <h3>Agency Information</h3>
		        <ul class="unstyled">
		          <li><strong>Agency Name: </strong><%= @role.agency_name %></li>
		          <li><strong>Agency Email: </strong><%= @role.agency_email %></li>
		          <li><strong>Agency Phone: </strong><%= @role.agency_phone_number %></li>
		        </ul>
		      </section>
		    </div>
		  </div>
		  
		  <hr />
		  <div class="row-fluid">
		    <section id="experience">
				    <h3><em>Experience</em><small class="pull-right"><%= link_to "Edit", role_route(@role, "edit") %></small></h3>
				    <% if !@role.role_experience.empty? %>
				      <%= @role.role_experience %>
				    <% else %>
				      <p>You have no experience.</p>
				    <% end %>
				    <hr />
		    </section>
		    
		    <section id="skills">
				    <h3><em>Skills</em><small class="pull-right"><%= link_to "Edit", role_route(@role, "edit") %></small></h3>
				    <% if !@role.role_skills.empty? %>
				      <%= @role.role_skills %>
				    <% else %>
				      <p>You have no skills.</p>
				    <% end %>
				    <hr />
		    </section>
		  </div>
		  
		  <div class="row-fluid">
		    <section id="portfolio">
				    <h3><em>Portfolio</em><small class="pull-right"><%= link_to "View full portfolio", portfolio_route(@role) %></small></h3>
				    <hr />
		    </section>
		    
		    <section id="projects">
			    <h3><em>Projects</em><small class="pull-right"><%= link_to "View all projects", projects_route(@role) %></small></h3>
			    <hr />
		    </section>    
		  </div>
		      
    </div>
  </div>
</div>
