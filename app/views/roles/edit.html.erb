<%= form_for(:picture, 
             :url => {:action => 'save'}, 
             :html => { :multipart => true }) do |form| %>
             
     Upload your picture: <%= form.file_field("uploaded_picture") %><%= submit_tag("Upload Picture") %><br/>
<% end %>


<%= form_tag roles_path do %>
	
	Select a Role:<br/>
	<select name="role[role_type]">
		<% for option in @options do %>
			<option selected="<%= @role.role_type %>" value="<%= option %>"><%= option %></option>
		<% end %>
	</select>
	
	<%= label_tag :role_name, "Stage Name:" %>
	<%= text_field_tag "role[role_name]", @role.role_name, {:placeholder => "Who do you go as?"} %>
	
	<%= label_tag :role_type_description, "Role Description:" %>
	<%= text_field_tag "role[role_type_description]", nil, :placeholder=>"What exactly do you do?" %>
	
	<%= label_tag :email, "Email:" %>
	<%= text_field_tag "role[email]", @user.email, {:placeholder => "What's your email?"} %>
	
	<%= label_tag :phone_number, "Phone Number: " %>
	<%= text_field_tag "role[phone_number]", nil, {:placeholder => "What's your number?"} %><br/>
  
  Age:<br/>
  <select name="role[age_range]">
		<% for age in @ages do %>
			<option value="<%= age %>"><%= age %></age>
		<% end %>
	</select>
	
	<%= label_tag :role_experience, "Experience: " %>
	<%= text_field_tag "role[role_experience]", nil, {:placeholder => "What's your experience in this role?"} %>
	
	<%= label_tag :role_skills, "Skills: " %>
	<%= text_field_tag "role[role_skills]", nil, {:placeholder => "What are your skills?"} %>
	
	<%= hidden_field_tag "role[user_id]", current_user.id %>
	
	<input type="submit" value="Modify Role">
<% end %>
<%= link_to "Cancel", home_path(@user.username) %>




